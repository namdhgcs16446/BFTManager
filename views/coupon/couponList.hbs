<div class="content">
  <div class="container-fluid"></div>
  <div class="row">
    <div class="col-md-12">
      <div class="card card-plain">
        <div class="card-header card-header-primary text-center">
          <h4 class="card-title mt-0">Sale code List </h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-10">
              <form action="/coupon/filter" method="post">
                <div class="row">
                  <div class="form-group col-4">
                    <select class="form-control" name="status" id="status">
                      <option value="0">Status</option>
                      <option value="true">Active</option>
                      <option value="false">inActive</option>
                    </select>
                  </div>
                  <div class="form-group col-4">
                    <button type="submit" class="btn btn-primary">Search</button>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-2">
              <a href="/coupon/couponDetail/new" class="btn btn-primary pull-right" type="button">Create sale code</a>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead class="thead-dark">
                <th>
                  No.
                </th>
                <th>
                  Code ID
                </th>
                <th>
                  Code description
                </th>
                <th>
                  Discount
                </th>
                <th>
                  Status
                </th>
                <th>
                </th>
              </thead>
              <tbody>
                {{#each coupons}}
                <tr>
                  <td>
                    {{this.number}}
                  </td>
                  <td>
                    {{this._id}}
                  </td>
                  <td>
                    {{this.description}}
                  </td>
                  <td>
                    {{this.discount}}
                  </td>
                  <td>
                    {{this.status}}
                  </td>
                  <td>
                    <a class="btn btn-success" href="/coupon/couponDetail/{{this._id}}">Detail</a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
            <div class="text-center">
              <nav style=" padding-right: 50px; display: inline-block;">
                <ul class="pagination">
                  <li class="page-item">
                    <a class="page-link" style="color:blueviolet" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                      <span class="sr-only">Previous</span>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:blueviolet" href="/coupon/couponList/1">1</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:blueviolet" href="/coupon/couponList/2">2</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:blueviolet" href="/coupon/couponList/3">3</a>
                  </li>
                  <li class="page-item"><a class="page-link" style="color:blueviolet" href="/coupon/couponList/4">4</a>
                  </li>
                  <li class="page-item">
                    <a class="page-link" style="color:blueviolet" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                      <span class="sr-only">Next</span>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>