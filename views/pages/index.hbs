  function downloadImage(chartjs) {
    /* set new title */
    chartjs.options.title.text = 'Chart for profit of each product';
    chartjs.data.datasets.backgroundColor = '(75, 192, 192, 2)'
    chartjs.update({
      duration: 0
    });
